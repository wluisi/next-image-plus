{
  "name": "next-image-plus",
  "version": "1.0.0-beta.3",
  "description": "Primitive React components, built on top of the Next.js Image API, which adds support for picture and background images.",
  "author": "William Luisi",
  "keywords": [
    "nextjs",
    "react",
    "typescript"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "TSUP_MODE=watch tsup",
    "lint": "TIMING=1 eslint src --fix",
    "prepare": "cp ../../README.md ./README.md",
    "test": "jest --verbose"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.22.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-jest": "^29.6.1",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.2.14",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "peerDependencies": {
    "react": "^19 || ^19.0.0-rc",
    "react-dom": "^19 || ^19.0.0-rc",
    "next": "^15"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "eslint --ignore-path .gitignore --fix",
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "jest": {
    "testRegex": "(/__tests__/.*.test.ts$|(\\.|/)(test|spec))\\.[jt]sx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist"
    ]
  },
  "files": [
    "dist"
  ],
  "homepage": "https://next-image-plus.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/wluisi/next-image-plus"
  },
  "bugs": {
    "url": "https://github.com/wluisi/next-image-plus/issues"
  }
}
