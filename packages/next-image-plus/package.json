{
  "name": "next-image-plus",
  "description": "Primitive React components, built on top of the Next.js Image API, which adds support for picture and background images.",
  "author": "William Luisi",
  "keywords": [
    "nextjs",
    "react",
    "typescript"
  ],
  "homepage": "https://next-image-plus.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/wluisi/next-image-plus"
  },
  "bugs": {
    "url": "https://github.com/wluisi/next-image-plus/issues"
  },
  "version": "1.0.0-beta.1",
  "license": "MIT",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "lint": "TIMING=1 eslint src --fix",
    "test": "jest --verbose"
  },
  "dependencies": {
    "next": "15.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.22.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.0.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-jest": "^29.6.1",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.2.14",
    "typescript": "4.9.4"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "eslint --ignore-path .gitignore --fix",
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "jest": {
    "testRegex": "(/__tests__/.*.test.ts$|(\\.|/)(test|spec))\\.[jt]sx?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist"
    ]
  },
  "files": [
    "dist"
  ]
}
